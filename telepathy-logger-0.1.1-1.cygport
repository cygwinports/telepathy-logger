inherit gnome2

DESCRIPTION="Telepathy IRC connection manager"
HOMEPAGE="http://telepathy.freedesktop.org/wiki/"
SRC_URI="http://telepathy.freedesktop.org/releases/${PN}/${P}.tar.bz2"
PATCH_URI="0.1.1-no-undefined.patch"

PKG_NAMES="${PN} lib${PN}0 lib${PN}-devel"
telepathy_logger_CONTENTS="--exclude=gtk-doc etc/ usr/bin/*.exe usr/share/"
libtelepathy_logger0_CONTENTS="usr/bin/*-0.dll"
libtelepathy_logger_devel_CONTENTS="usr/include/ usr/lib/ usr/share/gtk-doc/"
